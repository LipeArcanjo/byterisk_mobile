<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003EA6"
    tools:context=".activities.SplashScreenActivity"
    tools:layout_editor_absoluteX="-4dp"
    tools:layout_editor_absoluteY="-6dp">






    <!-- Imagem ByteRisk -->
    <ImageView
        android:id="@+id/imageLogoByterisk"
        android:layout_width="274dp"
        android:layout_height="324dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo_byterisk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageLogoOdontoprev" />

    <!-- Botão Começar -->
    <Button
        android:id="@+id/buttonStart"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#FFFFFF"
        android:text="Começar →"
        android:textColor="#003EA6"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageLogoByterisk" />

    <!-- Logo OdontoPrev -->
    <ImageView
        android:id="@+id/imageLogoOdontoprev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:src="@drawable/logo_odontoprev"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
